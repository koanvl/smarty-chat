<%= turbo_stream_from "chat_#{session[:chat_id]}" %>

<div class="chat-container">
  <h1>Demo Chat</h1>

  <div id="messages" class="messages">
    <%= render @messages %>
  </div>

  <%= form_with model: Message.new, class: "message-form" do |f| %>
    <%= f.text_field :content, placeholder: "Type a message..." %>
    <%= f.submit "Send" %>
  <% end %>
</div>

<% content_for :styles do %>
<style>
.chat-container {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}

.messages {
  margin: 20px 0;
  padding: 20px;
  border: 1px solid #ddd;
  border-radius: 8px;
  height: 500px;
  overflow-y: auto;
}

.message {
  margin: 10px 0;
  padding: 10px;
  border-radius: 8px;
  max-width: 80%;
}

.message.user {
  background-color: #e3f2fd;
  margin-left: auto;
}

.message.bot {
  background-color: #f5f5f5;
  margin-right: auto;
}

.message .status {
  font-size: 12px;
  color: #666;
  margin-top: 5px;
  font-style: italic;
}

.message-form {
  display: flex;
  gap: 10px;
  margin-top: 20px;
}

.message-form input[type="text"] {
  flex: 1;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.message-form input[type="submit"] {
  padding: 10px 20px;
  background-color: #2196f3;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.message-form input[type="submit"]:hover {
  background-color: #1976d2;
}
</style>
<% end %>