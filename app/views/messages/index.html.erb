<%= turbo_stream_from "dialog_#{@dialog.id}" %>

<div class="min-h-screen bg-gray-50 flex flex-col">
  <div class="flex-1 flex flex-col max-w-4xl w-full mx-auto p-4">
    <header class="py-4 px-6 bg-white rounded-t-xl shadow-sm border-b">
      <h1 class="text-2xl font-semibold text-gray-800">Smart Chat</h1>
      <p class="text-sm text-gray-500">Session ID: <%= session[:chat_id] %></p>
    </header>

    <div class="flex-1 bg-white">
      <div id="messages" class="h-[calc(100vh-280px)] overflow-y-auto p-6 space-y-4">
        <%= render @messages %>
      </div>
    </div>

    <div class="bg-white rounded-b-xl shadow-sm border-t p-4">
      <%= form_with model: Message.new,
                    url: dialog_messages_path(@dialog),
                    class: "flex items-end gap-2",
                    data: {
                      controller: "reset-form",
                      action: "turbo:submit-end->reset-form#reset"
                    } do |f| %>
        <div class="flex-1">
          <%= f.text_area :content,
                         rows: 1,
                         class: "w-full resize-none rounded-xl border-gray-200 focus:border-blue-500 focus:ring focus:ring-blue-200 transition duration-200 py-3 px-4",
                         placeholder: "Type your message..." %>
        </div>
        <%= f.submit "Send",
                    class: "rounded-xl bg-[#2563eb] px-4 py-3 text-white font-medium hover:bg-blue-700 focus:outline-none focus:ring focus:ring-blue-200 transition duration-200" %>
      <% end %>
    </div>
  </div>
</div>

<% content_for :styles do %>
<style>
/* Markdown styles */
.markdown-content {
  @apply text-gray-800 text-base leading-relaxed;
}

.markdown-content h1,
.markdown-content h2,
.markdown-content h3,
.markdown-content h4 {
  @apply text-lg font-semibold mt-2 mb-1;
}

.markdown-content p {
  @apply mb-2;
}

.markdown-content code {
  @apply bg-gray-100 text-sm px-1.5 py-0.5 rounded font-mono;
}

.markdown-content pre {
  @apply bg-gray-100 p-3 rounded-lg overflow-x-auto my-2;
}

.markdown-content pre code {
  @apply bg-transparent p-0 text-sm block;
}

.markdown-content ul,
.markdown-content ol {
  @apply my-2 pl-5;
}

.markdown-content ul {
  @apply list-disc;
}

.markdown-content ol {
  @apply list-decimal;
}

.markdown-content blockquote {
  @apply border-l-4 border-gray-200 pl-4 my-2 text-gray-600 italic;
}  

/* Message styles */
.message {
  @apply max-w-[80%] rounded-2xl p-4;
}

.message.user {
  @apply bg-[#2563eb] text-white ml-auto;
}

.message.user .markdown-content {
  @apply text-white;
}

.message.user .markdown-content code {
  @apply bg-blue-600 text-blue-100;
}

.message.user .markdown-content pre {
  @apply bg-blue-600;
}

.message.user .markdown-content blockquote {
  @apply border-blue-400 text-blue-100;
}

.message.bot {
  @apply bg-gray-100 text-gray-800 mr-auto;
}

.message .status {
  @apply text-xs mt-1 opacity-75;
}

.message.user .status {
  @apply text-blue-100;
}

.message.bot .status {
  @apply text-gray-500;
}
</style>
<% end %>